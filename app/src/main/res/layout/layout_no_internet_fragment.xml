<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutWordShared_Variations"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBarMain_Dict"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/buttonMain_Retry"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintLeft_toLeftOf="@id/buttonMain_Retry"
        app:layout_constraintRight_toRightOf="@id/buttonMain_Retry"
        app:layout_constraintTop_toTopOf="@id/buttonMain_Retry"
        app:layout_constraintWidth_percent="0.15" />

    <TextView
        android:id="@+id/textViewMain_DictError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Something went wrong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMain_Retry"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/buttonMain_Retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_dark_grey"
        android:padding="3dp"
        android:text="Retry"
        android:textAlignment="center"
        android:textColor="@color/light_grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>